#define _GNU_SOURCE
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>

int
main(void)
{
  /* FILE *fp; */
  char *line = NULL;
  char *token;
  size_t len = 0;
  ssize_t read;

  line = malloc(sizeof(1024));

  /* fp = fopen("/etc/motd", "r"); */
  /* fp = fopen("./prompt.c", "r"); */
  /* fp = stdin; */
  printf("$ ");
  fflush(stdout);
  while ((read = getline(&line, &len, stdin) != -1));
  /* read = getline(&line, &len, fp); */
  {
    /* printf("Retrieved line of length %lu :\n", read); */
    /* printf("%s", line); */
    token = strtok(line, " -,");
    write(1, token, strlen(token));
    while ((token = strtok(NULL, " -,")))
      {
	/* printf("Retrieved line of length %lu :\n", read); */
	/* printf("%s", line); */
	/* printf("%s\n", token); */
	/* token = strtok(NULL, " -,"); */
	write(1, "\n", 1);
	write(1, token, strlen(token));
      }
  }
  free(line);
  free(token);
  exit(EXIT_SUCCESS);
}
